{
  "name": "auto-tests",
  "displayName": "auto-tests",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karelhala/vs-code-auto-tests.git"
  },
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "AutoTests",
      "properties": {
        "autotests.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Controls whether autotests is enabled or not."
        },
        "autotests.filename": {
          "scope": "resource",
          "type": "string",
          "default": "[filename].test.js",
          "description": "Controls where and how tests will be saved."
        },
        "autotests.mocks": {
          "scope": "resource",
          "type": "string",
          "default": "__mocks__/[filename].js",
          "description": "Controls where and how mocks will be saved."
        }
      }
    },
    "commands": [
      {
        "command": "auto-tests.generate",
        "category": "AutoTests",
        "title": "Generate test files"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  }
}
